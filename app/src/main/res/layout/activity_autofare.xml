<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_autofare"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.nashik.myNashik.dreams.autofare">
    <TextView
        android:text="AutoFare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Educational"
        android:textSize="19sp"
        android:paddingTop="6dp"
        android:paddingBottom="0dp"
        android:textColor="#0000FF"
        android:gravity="center"/>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tabMode="fixed"
        tabGravity="fill"
        android:id="@+id/tablayout_autofare"
        app:tabTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        android:visibility="visible"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/tablayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="0dp">


    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="441dp"
        android:id="@+id/viewpager_autofare"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="0dp"
        android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>
</LinearLayout>
