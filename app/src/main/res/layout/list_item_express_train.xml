<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/linlay"
android:orientation="vertical"
android:paddingRight="5dp"
android:paddingLeft="5dp">

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_card"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/trainname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>

        <!--<TextView-->
            <!--android:id="@+id/livestatus"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:text="Live Status"-->
            <!--android:textAllCaps="false" />-->

        <LinearLayout
            android:id="@+id/layoutdetail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/trainname"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expnotitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="Train No : "
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:gravity="center"
               />

            <TextView
                android:id="@+id/expno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:text=""
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="#000080"
                android:gravity="left|center_vertical"/>

            <TextView
                android:id="@+id/exptimetitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:text="Time : "
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="#000080"
                android:gravity="center"/>

            <TextView
                android:id="@+id/exptime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text=""
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:gravity="left|center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/layoutdetail"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/expsun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="SUN"
                android:textColor="#000080"
                />

            <TextView
                android:id="@+id/expmon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="MON"
                android:textColor="#000080" />

            <TextView
                android:id="@+id/exptue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="TUE"
                android:textColor="#000080" />

            <TextView
                android:id="@+id/expwed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="WED"
                android:textColor="#000080" />

            <TextView
                android:id="@+id/expthu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="THU"
                android:textColor="#000080" />

            <TextView
                android:id="@+id/expfri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="FRI"
                android:textColor="#000080" />

            <TextView
                android:id="@+id/expsat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="SAT"
                android:textColor="#000080" />
        </LinearLayout>

        <TextView
            android:id="@+id/weekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutday"
            android:text=""
            android:textColor="#000080"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="15dp"/>


    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>